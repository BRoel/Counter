<h1>Calorie Counter</h1>
<br>
<h5><ul>
  <% if @entries.size > 0 %>
    <table class="table table-hover table-striped" >
    <tr class="info">
      <th><h5>Date</h5></th>
      <th><h5>Meal</h5></th>
      <th><h5>Food Type</h5></th>
      <th><h5>Description</h5></th>
      <th><h5>Calories</h5></th>
      <th><h5>Edit</h5></th>
    </tr>
      <% current_user.entries_sort_by_date.each do |entry| %>
        <tr style="text-align:left;">
          <td><%= entry.date.strftime('%D') %></td>
          <td><%= entry.meal %></td>
          <td><a href="entries/<%= entry.id %>"><%= entry.food_type %></a></td>
          <td><%= entry.description %></td>
          <td><%= entry.calories %></td>
          <td><a href="entries/<%= entry.id %>/edit">Edit</a></td>
        </tr>
      <% end %>
    </table>
    <br>
    <a href="/entries/new">Create new entry</a>
    <br>
    <br>
  <% else %>
    Click <a href="/entries/new">here to add an entry.</a>
  <% end %> 
</ul></h5>