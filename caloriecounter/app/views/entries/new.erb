<h1>Create New Entry</h1>
<br>

<% if flash.has?(:message) %>
  <p style="color:#f73325;"><%= flash[:message] %> </p>
<% end %>

<h5><form action="/entries" method="POST">
  <input type = "hidden" name="entry[user_id]" value=<%= current_user.id %>/>
  
  <input type="text" name="entry[meal]" id="meal" placeholder="Meal">
  <br>
  <input type="text" name="entry[food_type]" id="food_type" placeholder="Food Type">
  <br>
  <input type="number" name="entry[calories]" id="calories" min="0.01" step="0.01" max="9999999.99" placeholder="Calories">
  <br>
  <input type="date" name="entry[date]" id="date">
  <br>
  <input type="submit" value="Create Entry">
</form></h5>